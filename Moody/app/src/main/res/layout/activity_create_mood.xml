<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:weightSum="1">

    <Spinner
        android:id="@+id/Emotion"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:spinnerMode="@null"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/Description"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:layout_below="@+id/Emotion"
        android:layout_alignLeft="@+id/Emotion"
        android:layout_alignStart="@+id/Emotion" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:background="#00000000"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="#66CD00"
        android:textSize="23dp"
        android:layout_alignTop="@+id/SocialSituation"
        android:layout_alignRight="@+id/editImageView"
        android:layout_alignEnd="@+id/editImageView" />

    <ImageView
        android:id="@+id/editImageView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_above="@+id/Camera"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <ImageButton
        android:id="@+id/Camera"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_x="50px"
        android:layout_y="100px"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_camera"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignLeft="@+id/editImageView"
        android:layout_alignStart="@+id/editImageView" />

    <ImageButton
        android:id="@+id/location"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_location"
        android:layout_alignTop="@+id/Camera"
        android:layout_toRightOf="@+id/Camera"
        android:layout_toEndOf="@+id/Camera" />

    <Spinner
        android:id="@+id/SocialSituation"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_social"
        android:layout_below="@+id/editImageView"
        android:layout_toRightOf="@+id/location"
        android:layout_toEndOf="@+id/location"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />



    <android.support.design.widget.BottomNavigationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/yellowTheme"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menubar" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:text="Location"
        android:layout_below="@+id/Description"
        android:layout_toRightOf="@+id/toolbar2"
        android:layout_toEndOf="@+id/toolbar2" />

    <TextView
        android:id="@+id/SocialText"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Social Situation"
        android:layout_alignBaseline="@+id/locationText"
        android:layout_alignBottom="@+id/locationText"
        android:layout_alignRight="@+id/editImageView"
        android:layout_alignEnd="@+id/editImageView" />


</RelativeLayout>