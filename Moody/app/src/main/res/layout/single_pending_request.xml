<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pendingRequestUsername"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/acceptRequest"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:background="@android:color/holo_blue_light"
        android:text="ACCEPT"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/pendingRequestUsername"
        android:layout_toRightOf="@+id/pendingRequestUsername"
        android:layout_toEndOf="@+id/pendingRequestUsername" />

    <Button
        android:id="@+id/declineRequest"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/acceptRequest"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/acceptRequest"
        android:layout_toRightOf="@+id/acceptRequest"
        android:background="@android:color/holo_red_light"
        android:focusable="false"
        android:text="DECLINE"
        android:textColor="@color/white" />



</RelativeLayout>


