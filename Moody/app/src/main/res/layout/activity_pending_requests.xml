<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pending_requests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmput301w17t07.moody.PendingRequestsActivity">



    <android.support.design.widget.BottomNavigationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/yellowTheme"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menubar" />

    <TextView
        android:id="@+id/PendingRequestsText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellowTheme"
        android:gravity="center"
        android:text="TextView" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Requests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cmput301w17t07.moody.PendingRequestsActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/Request"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textStyle="bold"

            android:layout_alignBottom="@+id/Accept"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/Accept"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:focusable="false"
            android:background="@android:color/holo_blue_light"
            android:text="ACCEPT"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Request"
            android:layout_toEndOf="@+id/Request" />

        <Button
            android:id="@+id/Decline"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:focusable="false"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/white"
            android:text="DECLINE"
            android:layout_toRightOf="@+id/Accept"
            android:layout_toEndOf="@+id/Accept"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignBottom="@+id/Accept" />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/PendingRequestsText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

